{
    "name": "moodle/enrol_stripepayment",
    "description": "Stripe Payment enrolment plugin for Moodle",
    "type": "moodle-enrol",
    "license": "GPL-3.0-or-later",
    "homepage": "https://moodle.org",
    "authors": [
        {
            "name": "Moodle Community",
            "homepage": "https://moodle.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "stripe/stripe-php": "^17.3"
    },
    "autoload": {
        "psr-4": {
            "enrol_stripepayment\\": "classes/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "moodlehq/moodle-cs": "^3.2",
        "phpcompatibility/php-compatibility": "^9.3",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "scripts": {
    "build": "grunt amd --root=enrol/stripepayment",
    "zip": [
        "@build",
        "zip -r stripepayment.zip . -x \".git/*\" \".github/*\" \"composer.lock\" \"composer.json\" \"log.txt\" \"CHANGELOG.md\" \"phpcs.xml\" \"readme.md\" \".gitignore\" \"package.json\" \"package-lock.json\" \"vendor/bin/*\" \"vendor/squizlabs/*\" \"vendor/phpcompatibility/*\" \"vendor/dealerdirect/*\" \"vendor/moodlehq/*\" \"vendor/composer/*\" \"vendor/autoload.php\""
    ]
    }
}
