{
    "name": "moodle/enrol_stripepayment",
    "description": "Stripe Payment enrolment plugin for Moodle",
    "type": "moodle-enrol",
    "license": "GPL-3.0-or-later",
    "homepage": "https://dualcube.com",
    "authors": [
        {
            "name": "DualCube <admin@dualcube.com>",
            "homepage": "https://dualcube.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "stripe/stripe-php": "^17.4.0"
    },
    "autoload": {
        "psr-4": {
            "enrol_stripepayment\\": "classes/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "moodlehq/moodle-cs": "^3.2",
        "phpcompatibility/php-compatibility": "^9.3",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "scripts": {
        "build": "./node_modules/.bin/grunt amd --root=enrol/stripepayment",
        "copy-files": [
            "mkdir -p release/stripepayment",
            "@php -r \"$exclude = ['release', '.', '..']; $files = array_diff(scandir('.'), $exclude); foreach($files as $file) { if($file[0] !== '.') { $cmd = 'cp -R ' . escapeshellarg($file) . ' release/stripepayment/'; exec($cmd); } }\""
        ],
        "zip-unix": [
            "@build",
            "@copy-files",
            "cd release && zip -r stripepayment.zip stripepayment -x@../exclude.lst",
            "rm -rf release/stripepayment"
        ],
        "zip-windows": [
            "@build",
            "if not exist release mkdir release",
            "if not exist release\\stripepayment mkdir release\\stripepayment",
            "xcopy /E /I /Y * release\\stripepayment\\ /EXCLUDE:exclude.lst",
            "cd release && powershell Compress-Archive -Path stripepayment -DestinationPath stripepayment.zip -Force",
            "rmdir /S /Q release\\stripepayment"
        ],
        "phpcs": "vendor/bin/phpcs --standard=Moodle --ignore=vendor/*,.git/* .",
        "phpcf": "vendor/bin/phpcbf --standard=Moodle --ignore=vendor/*,.git/*"
    }
}
