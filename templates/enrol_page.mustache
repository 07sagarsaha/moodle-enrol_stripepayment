{{!
    @template enrol_stripepayment/enrol_page

    Contents of the enrolment widget on the course enrolment page

    Example context (json):
    {
        "hascost": true
        "cost": "10.00",
        "currency": "USD",
        "coursename": "Course Name",
        "instanceid": "1",
        "wwwroot": "https://example.com"
        "enablecouponsection": true
    }
}}
<div class="paymentcontainer">
    <div class="currencybox">
        <span class="currencyselected">
            {{currency}} {{cost}}
        </span>
    </div>

    <div class="item">
        <div class="itemtitle">{{coursename}}</div>
        <div class="itemprice">{{currency}} {{cost}}</div>
    </div>
    <p class="itemsubtitle">{{coursename}}</p>

    <div class="line"></div>

    <div class="subtotal">
        <span>Subtotal</span>
        <span id="subtotalamount-{{instanceid}}">{{currency}} {{cost}}</span>
    </div>

    <!-- Coupon input section -->
    {{#enablecouponsection}}
    <div class="couponsection">
        <div class="coupon-input-group">
            <input type="text" id="coupon-{{instanceid}}" placeholder="Enter coupon code" />
            <button id="apply-{{instanceid}}" class="applybtn">Apply</button>
        </div>
        <div id="showmessage-{{instanceid}}" class="couponmessage"></div>
    </div>
    {{/enablecouponsection}}

    <!-- Discount section (hidden by default, shown when coupon is applied) -->
    <div id="discountsection-{{instanceid}}" style="display: none;">
        <div class="discount">
            <span class="tag" id="discounttag-{{instanceid}}">Discount</span>
            <span class="discountamount" id="discountamountdisplay-{{instanceid}}">-{{currency}} 0.00</span>
        </div>
        <p class="discountnote" id="discountnote-{{instanceid}}">Discount applied</p>
    </div>

    <div class="total" id="total-{{instanceid}}">
        <strong>Total due</strong>
        <strong id="totalamount-{{instanceid}}">{{currency}} {{cost}}</strong>
    </div>

    <!-- Container for displaying payment response/errors -->
    <div id="paymentresponse-{{instanceid}}" class="error-message" style="display: none;"></div>

    <!-- Single enrollment button that handles paid enrollment -->
    <div id="enrollmentbutton-{{instanceid}}">
        <button id="enrolbutton-{{instanceid}}" class="pay-btn">
            {{# str }} enrolnow, enrol_stripepayment {{/ str }}
        </button>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>

<style>
    .paymentcontainer {
        background: transparent;
        padding: 20px 0;
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

    h2 {
        font-size: 16px;
        margin-bottom: 10px;
        color: #333;
    }

    .currencybox {
        margin-bottom: 8px;
    }

    .currencyselected {
        display: inline-flex;
        align-items: center;
        border: 2px solid #ccc;
        padding: 6px 12px;
        border-radius: 6px;
        background: #f1f1f1;
        font-weight: bold;
    }

    .currencyselected img {
        width: 20px;
        height: 14px;
        margin-right: 6px;
    }

    .note {
        font-size: 12px;
        color: gray;
        margin-bottom: 20px;
    }

    .item, .subtotal, .discount, .total {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
    }

    .itemtitle {
        font-weight: bold;
    }

    .itemsubtitle, .discountnote {
        font-size: 13px;
        color: gray;
        margin-bottom: 12px;
    }

    .line {
        height: 1px;
        background: #eee;
        margin: 12px 0;
    }

    .tag {
        background: #f1f1f1;
        padding: 3px 8px;
        border-radius: 6px;
        font-size: 14px;
    }

    .discountamount {
        color:rgb(167, 167, 167);
    }

    .couponsection {
        margin: 18px 0 12px 0;
        padding: 15px 0 12px 0;
        border-top: 1px solid #eee;
    }

    /* Uncomment the code below to hide the coupon input section */
    /*
    .couponsection {
        display: none !important;
    }
    */

    .total {
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid #eee;
    }

    .coupon-input-group {
        display: flex;
        gap: 8px;
        margin-bottom: 8px;
    }

    .couponsection input {
        flex: 1;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        box-sizing: border-box;
    }

    .applybtn {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        white-space: nowrap;
        min-width: 80px;
    }

    .applybtn:hover {
        background-color: #5a6268;
    }

    .couponmessage {
        font-size: 12px;
        margin-top: 5px;
    }

    .error-message {
        background-color: #f8d7da;
        color: #721c24;
        padding: 8px 12px;
        border-radius: 4px;
        margin: 10px 0;
        font-size: 14px;
    }

    .pay-btn {
        margin-top: 18px;
        width: 100%;
        background-color: {{#enrolbtncolor}}{{enrolbtncolor}}{{/enrolbtncolor}}{{^enrolbtncolor}}#0070f3{{/enrolbtncolor}};
        color: white;
        border: none;
        padding: 12px 0;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
    }

    .pay-btn:hover {
        background-color: {{#enrolbtncolor}}{{enrolbtncolor}}{{/enrolbtncolor}}{{^enrolbtncolor}}#005fd1{{/enrolbtncolor}};
        filter: brightness(0.9);
    }

    .pay-btn:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .paymentcontainer {
            width: 100%;
            max-width: 100%;
            padding: 15px 10px;
        }

        .currencyselected {
            font-size: 14px;
            padding: 8px 12px;
        }

        .currencyselected img {
            width: 18px;
            height: 12px;
        }

        h2 {
            font-size: 15px;
        }

        .itemtitle {
            font-size: 14px;
        }

        .coupon-input-group {
            gap: 6px;
        }

        .couponsection input {
            padding: 10px 12px;
            font-size: 16px; /* Prevents zoom on iOS */
        }

        .applybtn {
            padding: 10px 12px;
            font-size: 16px;
            min-width: 70px;
        }

        .pay-btn {
            padding: 14px 0;
            font-size: 18px;
        }
    }

    @media (max-width: 480px) {
        .paymentcontainer {
            padding: 10px 5px;
        }

        .currencyselected {
            font-size: 13px;
            padding: 6px 10px;
        }

        .item, .subtotal, .discount, .total {
            font-size: 14px;
        }

        .coupon-input-group {
            flex-direction: column;
            gap: 8px;
        }

        .applybtn {
            width: 100%;
            min-width: auto;
        }

        .couponsection {
            margin: 15px 0 10px 0;
            padding: 12px 0 10px 0;
        }
    }

    /* Interactive Elements */
    .applybtn:active {
        transform: translateY(1px);
        background-color: #495057;
    }

    .pay-btn:active {
        transform: translateY(1px);
        background-color: {{#enrolbtncolor}}{{enrolbtncolor}}{{/enrolbtncolor}}{{^enrolbtncolor}}#004bb5{{/enrolbtncolor}};
        filter: brightness(0.8);
    }

    .couponsection input:focus {
        outline: none;
        border-color: #0070f3;
        box-shadow: 0 0 0 2px rgba(0, 112, 243, 0.2);
    }

    /* Smooth transitions */
    .applybtn, .pay-btn {
        transition: all 0.2s ease;
    }

    .couponsection input {
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }
</style>
