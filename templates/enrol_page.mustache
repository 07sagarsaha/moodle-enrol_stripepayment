{{!
    @template enrol_stripepayment/enrol_page

    Contents of the enrolment widget on the course enrolment page

    Example context (json):
    {
        "hascost": true
        "cost": "10.00",
        "currency": "USD",
        "coursename": "Course Name",
        "instanceid": "1",
        "wwwroot": "https://example.com"
        "enablecouponsection": true
    }
}}
<div class="paymentcontainer">
    <div class="currencybox">
        <span class="currencyselected">
            {{currency}} {{cost}}
        </span>
    </div>

    <div class="item">
        <div class="itemtitle">{{coursename}}</div>
        <div class="itemprice">{{currency}} {{cost}}</div>
    </div>
    <p class="itemsubtitle">{{coursename}}</p>

    <div class="line"></div>

    <div class="subtotal">
        <span>Subtotal</span>
        <span id="subtotalamount-{{instanceid}}">{{currency}} {{cost}}</span>
    </div>

    <!-- Coupon input section -->
    {{#enablecouponsection}}
    <div class="couponsection">
        <div class="coupon-input-group" id="couponinputgroup">
            <input type="text" id="coupon-{{instanceid}}" placeholder="Enter coupon code" />
            <button id="apply-{{instanceid}}" class="applybtn">Apply</button>
        </div>
        <div id="showmessage-{{instanceid}}" class="couponmessage"></div>
    </div>
    {{/enablecouponsection}}

    <!-- Discount section (hidden by default, shown when coupon is applied) -->
    <div id="discountsection-{{instanceid}}" style="display: none;">
        <div class="discount">
            <span class="tag" id="discounttag-{{instanceid}}">Discount</span>
            <span class="discountamount" id="discountamountdisplay-{{instanceid}}">-{{currency}} 0.00</span>
        </div>
        <p class="discountnote" id="discountnote-{{instanceid}}">Discount applied</p>
    </div>

    <div class="total" id="total-{{instanceid}}">
        <strong>Total due</strong>
        <strong id="totalamount-{{instanceid}}">{{currency}} {{cost}}</strong>
    </div>

    <!-- Container for displaying payment response/errors -->
    <div id="paymentresponse-{{instanceid}}" class="error-message" style="display: none;"></div>

    <!-- Single enrollment button that handles paid enrollment -->
    <div id="enrollmentbutton-{{instanceid}}">
        <button id="enrolbutton-{{instanceid}}" class="pay-btn">
            {{# str }} enrolnow, enrol_stripepayment {{/ str }}
        </button>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>

<style>
    .pay-btn {
        margin-top: 18px;
        width: 100%;
        background-color: {{#enrolbtncolor}}{{enrolbtncolor}}{{/enrolbtncolor}}{{^enrolbtncolor}}#0070f3{{/enrolbtncolor}};
        color: white;
        border: none;
        padding: 12px 0;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
    }

    .pay-btn:hover {
        background-color: {{#enrolbtncolor}}{{enrolbtncolor}}{{/enrolbtncolor}}{{^enrolbtncolor}}#005fd1{{/enrolbtncolor}};
        filter: brightness(0.9);
    }

    .pay-btn:active {
        transform: translateY(1px);
        background-color: {{#enrolbtncolor}}{{enrolbtncolor}}{{/enrolbtncolor}}{{^enrolbtncolor}}#004bb5{{/enrolbtncolor}};
        filter: brightness(0.8);
    }
    </style>
